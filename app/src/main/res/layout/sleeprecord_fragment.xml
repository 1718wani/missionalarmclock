<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name = "vm" type="com.example.ikuya.missionalertclock.ui.record.SleepRecordViewModel"/>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.record.SleepRecordFragment">

        <TextView
            android:id="@+id/SleepRecordTitle"
            android:layout_width="324dp"
            android:layout_height="41dp"
            android:text="@string/SleepRecordTitle"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.298"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.065" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="415dp"
            android:layout_height="551dp"
            tools:layout_editor_absoluteX="-5dp"
            tools:layout_editor_absoluteY="87dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="データをクリア"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="657dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ログイン"
            tools:layout_editor_absoluteX="227dp"
            tools:layout_editor_absoluteY="657dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>